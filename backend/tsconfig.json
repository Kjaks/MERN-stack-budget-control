{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src", // Base directory to resolve non-relative module names
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
